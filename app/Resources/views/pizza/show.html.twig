{% extends 'base.html.twig' %}

{% block contenu %}
    <h1>Pizza</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pizza.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pizza.nomPizza }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ pizza.taille }}</td>
            </tr>
            <tr>
                <th>Base</th>
                <td>{{ pizza.base }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ pizza.ingredients }}</td>
            </tr>
            <tr>
                <th>Prix</th>
